button {
    background: linear-gradient(to right, #ed6049, #f4be92);
    color: white;
    width: 50%;
    border-radius: 40rpx;
    /* margin-top: 20rpx; */
    box-shadow: 2px 5px 10px #ccc;
    font-size: 24rpx;
    height: 100rpx;
    line-height: 100rpx;
    margin: 0 auto;
    margin-top: 200rpx;
}

page {
    display: flex;
    justify-content: center;
    align-items: center;
}

.container {
    width: 90%;
    height: auto;
    padding: 10rpx 0;
    margin: 0 auto;
    font-size: 28rpx;
}

picker {
    margin: 20rpx 0;
}

picker text {
    color: #c7c7c7;
}

picker input {
    border-bottom: 1px solid #c3c3c3;
    padding: 20rpx 0;
    font-size: 32rpx;
}

.chooseTime {
    position: fixed;
    top: 100rpx;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 28rpx;
    font-weight: 700;
    color: #e38647;
    z-index: 100;
}