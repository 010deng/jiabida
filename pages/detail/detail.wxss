.topImg {
    width: 100%;
    height: 500rpx;
}

.topImg image {
    width: 100%;
    height: 100%;
    background-color: #ccc;
}

.card {
    width: 90%;
    margin: 0 auto;
    height: 300rpx;
    transform: translateY(-100rpx);
    background-color: #ffffff;
    border-radius: 5px;
    box-shadow: 0 3px 8px #ccc;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    /* font-size: 32rpx; */
}

.card .name {
    font-size: 36rpx;
    font-weight: 700;
    height: 80rpx;
    width: 90%;
    line-height: 80rpx;
}

.card .position {
    height: 100rpx;
    width: 90%;
    font-size: 28rpx;
    line-height: 100rpx;
    display: flex;
    align-items: center;
}

.position image {
    height: 40rpx;
    width: 40rpx;
    margin-right: 10rpx;
}

.position text {
    height: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-right: 30rpx;
}

.card .abstract {
    height: 100rpx;
    width: 90%;
    font-size: 28rpx;
    line-height: 100rpx;
    display: flex;
    align-items: center;
}

.abstract text {
    height: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.coachmsg {
    width: 90%;
    margin: 0 auto;
    height: auto;
    border-top: 1px solid #eeeeee;
    padding-bottom: 100rpx;
}

.coach {
    height: 200rpx;
    width: 100%;
    /* background-color: #eee; */
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.coach .left {
    width: 120rpx;
    height: 120rpx;
    /* background-color: skyblue; */
    border-radius: 50%;
}

.coach .right {
    width: 50%;
    height: 150rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.coach_name {
    height: 70rpx;
    font-size: 32rpx;
    line-height: 70rpx;
}

.right .bottom {
    width: 100%;
    height: 70rpx;
    font-size: 28rpx;
    display: flex;
    /* justify-content: space-around; */
    align-items: center;
}

.bottom .number {
    padding-right: 20rpx;
}

.left image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.introduction {
    width: 90%;
    height: auto;
    padding: 20rpx 0;
    margin: 0 auto;
    margin-bottom: 100rpx;
    border-top: 1px dashed #ccc;
}

.introduction .title {
    font-size: 36rpx;
    font-weight: 700;
    text-indent: 2em;
    padding: 20rpx 0;
    letter-spacing: 15rpx;
}

.introduction text {
    width: 100%;
    height: 100%;
    text-align: justify; 
    text-justify: ideographic;
    text-indent: 2em;
    word-break: break-all;
    font-size: 32rpx;
    line-height: 1.7em;
}

.fixBottom {
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 0;
}

.fixBottom button {
    width: 100%;
    height: 100%;
    line-height: 100rpx;
    color: white;
    font-size: 28rpx;
    background-color: #edad49;
    border-radius: 0;
}
