.authorization_header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}

.authorization_header image {
    width: 200rpx;
    height: 200rpx;
}

.authorization_content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    /* margin-left: 50rpx;
    margin-bottom: 90rpx; */
}

.authorization_content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
    text-align: center;
}

.authorization_bottom {
    border-radius: 80rpx;
    margin: 70rpx 100rpx;
    font-size: 35rpx;
}