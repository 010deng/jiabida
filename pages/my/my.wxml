<view class="top">
    <view class="top_block">
        <image class="bgc" src="../../imgs/background.png"></image>
        <view class="topFixed">
            <view class="left">
                <cover-image class="head" src="{{avatarUrl}}"></cover-image>
                <text class="nickName">{{nickName}}</text>
            </view>
            <view class="bindSchool" bind:tap="navigTo">绑定教练</view>
        </view>
    </view>
    <view class="navList">
        <view class="schedule">
            <view class="{{'注册' == select ? 'selected':''}}">注册</view>
            <view class="{{'科一' == select ? 'selected':''}}">科一</view>
            <view class="{{'科二' == select ? 'selected':''}}">科二</view>
            <view class="{{'科三' == select ? 'selected':''}}">科三</view>
            <view class="{{'科四' == select ? 'selected':''}}">科四</view>
            <view class="{{'拿证' == select ? 'selected':''}}">拿证</view>
        </view>
        <view class="block" catch:tap="toProtect">
            <view class="block_l">
                <image class="leftImg" src="../../imgs/umbrella.png" />
                <text>我的保障</text>
            </view>
            <image class="rightImg" src="../../imgs/arrow.png" />
        </view>
        <view class="block last" catch:tap="toAppointment">
            <view class="block_l">
                <image class="leftImg" src="../../imgs/appointment.png" />
                <text>预约练车</text>
            </view>
            <image class="rightImg" src="../../imgs/arrow.png" />
        </view>
    </view>
</view>
<view class="bottom">
    <button open-type="contact" class="left">
        <image class="leftImg" src="../../imgs/consult.png" />
        <text>客服咨询</text>
    </button>
    <button open-type="feedback" class="right">
        <image class="img" src="../../imgs/feedback.png" />
        <text>意见反馈</text>
    </button>
</view>