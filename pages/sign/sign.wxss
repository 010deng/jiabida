.data {
    width: 85%;
    /* height: 100%; */
    margin: 0 auto;
    background-color: #fff;
    /* display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start; */
}

.data .data_block {
    width: 100%;
    display: flex;
    height: 150rpx;
    align-items: center;
    font-size: 24rpx;
    color: black;
    border-bottom: 1px solid #ccc;
}

.data .left {
    height: 100%;
    width: 40%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.data .img {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
}

.data .right {
    width: 60%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.data .input {
    width: 100%;
    height: 80rpx;
    /* margin-left: 40rpx; */
    display: flex;
    justify-content: center;
    align-items: center;
}

.input input {
    width: 100%;
    padding: 20rpx 0;
}

.data .last {
    margin-bottom: 40rpx;
}

.data button {
    background: linear-gradient(to right, #ed6049, #f4be92);
    color: white;
    width: 50%;
    border-radius: 40rpx;
    /* margin-top: 40rpx; */
    box-shadow: 2px 5px 10px #ccc;
    font-size: 24rpx;
    height: 100rpx;
    line-height: 100rpx;
    margin: 0 auto;
}